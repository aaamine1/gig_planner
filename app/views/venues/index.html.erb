

<div class="featuring mt-3">
  <h1>Discover our venues</h1>
</div>




<div class="content">
    <div class="grid">

        <% @venues.each do |venue| %>
          <div class="card-trip">
              <%= image_tag "https://picsum.photos/600/800" %>
                  <div class="card-product-infos">
                      <h2>  <%= link_to venue.name, venue_path(venue) %> </h2>
                      <p> <%= venue.price %>â‚¬ per day</p>
                      <p> <%= venue.location %></p>
                  </div>
          </div>
        <% end %>

    </div>
    <div id="map"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>


</div>
