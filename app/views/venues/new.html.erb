
<div class="containe-new-venue">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 ">
    <h1> Add a new venue to your collection ! </h1>
    <br>
      <%= link_to "Back to all venues", venues_path, class: "btn btn-primary col-12 mb-3"%>
      <%= simple_form_for [ @venue ] do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :capacity %>
        <%= f.input :square_meter %>
        <%= f.input :price %>
        <%= f.input :image_url %>
        <%= f.submit "add venue", class: "btn btn-primary" %>
      <% end %>
    </div>  
  </div>
</div>

